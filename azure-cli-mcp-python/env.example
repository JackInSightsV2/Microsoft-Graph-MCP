# Azure CLI MCP Server Configuration
# Copy this file to .env and update with your values

# Azure credentials (JSON format)
AZURE_CREDENTIALS={"clientId":"your-client-id","clientSecret":"your-client-secret","tenantId":"your-tenant-id"}

# Application settings
AZURE_CLI_MCP_LOG_LEVEL=INFO
AZURE_CLI_MCP_LOG_FILE=./azure-cli-mcp.log

# Web server settings (optional)
AZURE_CLI_MCP_WEB_HOST=0.0.0.0
AZURE_CLI_MCP_WEB_PORT=8080

# MCP server settings
AZURE_CLI_MCP_MCP_SERVER_ENABLED=true
AZURE_CLI_MCP_MCP_SERVER_STDIO=true
AZURE_CLI_MCP_MCP_SERVER_NAME=azure-cli-mcp 